<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension point="org.eclipse.ui.preferencePages">
       <page
            class="com.tlcsdm.eclipse.translation.preferences.TranslatePreferencePage"
            id="com.tlcsdm.eclipse.translation.preferences.translatePreferencePage"
            name="Translation">
       </page>
	</extension>

	<extension point="org.eclipse.core.runtime.preferences">
		<initializer
			class="com.tlcsdm.eclipse.translation.preferences.PreferenceInitializer">
		</initializer>
	</extension>
	
	<extension point="org.eclipse.help.toc">
		<toc file="help/help_toc.xml" primary="true"/>
	</extension>
	   <extension
          point="org.eclipse.help.contexts">
      <contexts
            file="help/help_contexts.xml"
            plugin="com.tlcsdm.eclipse.translation">
      </contexts>
   </extension>
   
    <extension
         point="org.eclipse.ui.views">
      <category
            name="Translation Category"
            id="com.tlcsdm.eclipse.translation.views.category">
      </category>
      <view
            name="Translation View"
            icon="icons/sample.gif"
            category="com.tlcsdm.eclipse.translation.views.category"
            class="com.tlcsdm.eclipse.translation.views.TranslationView"
            id="com.tlcsdm.eclipse.translation.views.TranslationView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.tlcsdm.eclipse.translation.views.TranslationView">
         </view>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Translation Category"
            id="com.tlcsdm.eclipse.translation.commands.category">
      </category>
      <command
            name="Translation Command"
            categoryId="com.tlcsdm.eclipse.translation.commands.category"
            id="com.tlcsdm.eclipse.translation.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.tlcsdm.eclipse.translation.commands.sampleCommand"
            class="com.tlcsdm.eclipse.translation.handlers.KeyHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.tlcsdm.eclipse.translation.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+M2+C"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>

</plugin>
